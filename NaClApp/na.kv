<ItemLabel@Label>:
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size


<Con>:
    rows: 3

    text_input: text_input
    salt: salt
    nitro: nitro
    dextrose: dextrose
    starts: starts
    salting_time: salting_time
    

    AnchorLayout:
        size_hint: 1, 0.15
       
        TextInput:
            input_type: 'number'
            input_filter: 'int'
            id: text_input
            font_size: '45sp'
            multiline: False

    GridLayout:
        cols: 2

        

        
            
        
        BoxLayout:
            padding: [30, 0, 0, 0]
            orientation: 'vertical'
            ItemLabel:
                
                text: '^2'
            ItemLabel:
                
                text: '^3'
            ItemLabel:
                
                text: '^4'
            ItemLabel:
                
                text: '^5'
            ItemLabel:
                id: salting_time
                text: '^6'
            

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 1
            ItemLabel:
                id: salt
                text: '0'
            ItemLabel:
                id: nitro
                text: '0'
            ItemLabel:
                id: dextrose
                text: '0'
            ItemLabel:
                id: starts
                text: '0'
            ItemLabel:
                id: salting_time
                text: '0'
            

    BoxLayout:
        size_hint: 0.9, 0.15
        padding: [30, 0, 30, 20]
        Button:
            text: 'GO'
            font_size: 40

            on_release:
                root.calculate()
                    
            